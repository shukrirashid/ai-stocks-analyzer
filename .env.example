# API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_stocks_analyzer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_stocks_analyzer
DB_USER=postgres
DB_PASSWORD=your_password_here

# Application Configuration
NODE_ENV=development
DEBUG=false
PORT=3000
LOG_LEVEL=info

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Stock Analysis Configuration
MAX_STOCKS_PER_ANALYSIS=10
ANALYSIS_CACHE_TTL=3600
UPDATE_INTERVAL=300

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SENDER_EMAIL=noreply@ai-stocks-analyzer.com

# External Services
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Feature Flags
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_INDICATORS=true

# Logging
LOG_FILE_PATH=./logs/app.log
MAX_LOG_FILE_SIZE=10M
MAX_LOG_FILES=7
